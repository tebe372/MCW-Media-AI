
@{
    ViewBag.Title = "Add Course";
}

<h2>@(ViewBag.Title)</h2>

@Html.ValidationSummary()

@using (Html.BeginForm("Upload", "Home", new { }, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        <div class="col-md-10">
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" class="form-control" required />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <label for="title">Description:</label>
            <textarea class="form-control" id="description" name="description"></textarea>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <label for="file">Video:</label>
            <input type="file" id="file" name="file" class="form-control" required />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload Video" class="btn btn-primary" />

            <a href="@Url.Action("Index")" class="btn btn-default">Cancel</a>
        </div>
    </div>
}